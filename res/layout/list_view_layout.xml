<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font_type="http://schemas.android.com/apk/res/com.rss_pion"
    android:id="@+id/backgroundVertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".FluxActivity" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkColor"
        android:orientation="vertical"
        tools:context=".FluxActivity" >

        <com.rss_pion.ui.RSS_PionTextView
    		android:id="@+id/list_view_slogan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/slogan"
            android:textColor="@color/White"
            android:textColorHighlight="@color/WhiteSmoke"
            android:textSize="25sp"
            font_type:ttf_name="fonts/scriptmtb.ttf" />

        <requestFocus />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/body"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.60"
        android:background="@color/darkColor" 
        android:orientation="horizontal"
        tools:context=".FluxActivity" >

        <LinearLayout
            android:id="@+id/listFlux"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/middleColor"
            android:gravity="right"
            android:orientation="horizontal"
            tools:context=".FluxActivity" >

            <ListView
                android:id="@+id/listView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>