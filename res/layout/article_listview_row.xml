<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/article_activity"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/middleColor"
    android:padding="0dp" >

    <android.widget.TextView
        android:id="@+id/articleTitleView"
        android:layout_width="fill_parent"
        android:singleLine="true"
        android:layout_height="40sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/WhiteSmoke"
        android:padding="5dp"
        android:background="@color/darkColor" />

    <requestFocus />

    <RelativeLayout
        android:id="@+id/articleAuthorAndPubDate"
        android:layout_width="wrap_content"
        android:paddingLeft="15dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/articleTitleView" >

        <android.widget.TextView
            android:id="@+id/articleAuthorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <requestFocus />

        <android.widget.TextView
            android:id="@+id/articlePubDateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/articleAuthorView" />

        <requestFocus />
    </RelativeLayout>

    <android.widget.TextView
        android:id="@+id/articleCategoryView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="15dp"
        android:layout_below="@+id/articleAuthorAndPubDate" />

    <requestFocus />

    <android.widget.TextView
        android:id="@+id/articleDescriptionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:layout_below="@+id/articleCategoryView" />

    <requestFocus />

</RelativeLayout>